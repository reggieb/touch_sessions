<h1>Editing Training Session Activity</h1>

<%= form_with(
      model: @training_session_activity,
      url: training_session_activity_path(@training_session, @training_session_activity),
      local: true
    ) do |form| %>
  <%= render 'form', form: form, training_session_activity: @training_session_activity %>
<% end %>

<p class="buttons">
  <%= link_to(
        'Delete',
        training_session_activity_path(@training_session, @training_session_activity),
        method: :delete,
        data: { confirm: 'Are you sure?' },
        class: 'btn btn-danger'
      ) %>

  <%= link_to 'Cancel', @training_session, class: 'btn btn-secondary' %>
</p>
