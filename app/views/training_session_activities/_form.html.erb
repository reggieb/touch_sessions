<div class="form-group">
  <%= form.label :aim %>
  <%= form.text_area :aim, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :activity_id %>
  <%= form.collection_select :activity_id, Activity.all, :id, :name, prompt: true, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :technical_points %>
  <%= form.text_area :technical_points, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :differentiation %>
  <%= form.text_area :differentiation, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :description, 'Comments' %>
  <%= form.text_area :description, class: 'form-control' %>
</div>

<div class="form-group">
  <%= form.label :duration_minutes, "Duration" %>
  <em>If Zero activity is combined with previous</em>
  <%= form.select :duration_minutes, (0..120).step(5).map {|s| ["#{s} minutes", s]} %>
</div>

<div class="actions">
  <%= form.submit class: 'btn btn-primary' %>
</div>

